{
  "name": "crypto-exchange-backoffice",
  "version": "1.0.0",
  "description": "Cryptocurrency Exchange Backoffice Monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --recursive build",
    "build:api": "pnpm --filter @crypto-exchange/api build",
    "build:backoffice": "pnpm --filter @crypto-exchange/backoffice build",
    "build:shared": "pnpm --filter @crypto-exchange/shared build",
    "dev:api": "pnpm --filter @crypto-exchange/api start:dev",
    "dev:backoffice": "pnpm --filter @crypto-exchange/backoffice dev",
    "dev:shared": "pnpm --filter @crypto-exchange/shared dev",
    "test": "pnpm run --recursive test",
    "test:api": "pnpm --filter @crypto-exchange/api test",
    "test:backoffice": "pnpm --filter @crypto-exchange/backoffice test",
    "lint": "pnpm run --recursive lint",
    "lint:api": "pnpm --filter @crypto-exchange/api lint",
    "lint:backoffice": "pnpm --filter @crypto-exchange/backoffice lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "clean": "pnpm run --recursive clean && rm -rf node_modules",
    "clean:api": "pnpm --filter @crypto-exchange/api clean",
    "clean:backoffice": "pnpm --filter @crypto-exchange/backoffice clean",
    "clean:shared": "pnpm --filter @crypto-exchange/shared clean",
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:prod": "docker compose up -d",
    "docker:prod:down": "docker compose down",
    "docker:prod:logs": "docker compose logs -f",
    "docker:build": "docker compose build",
    "docker:clean": "docker compose down -v --rmi all --remove-orphans"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.10.0",
  "dependencies": {
    "axios": "^1.5.0"
  }
}
